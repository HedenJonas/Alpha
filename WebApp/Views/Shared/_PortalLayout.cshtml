<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
        @(string.IsNullOrEmpty(ViewData["Title"] as string) ? "Alpha" : ViewData["Title"] + " - Alpha")
    </title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a576612222.css" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApp.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="portal">
        <div class="side">
            <div class="logotype"><img src="/Images/Alpha-icon.svg" alt="Logotype Alpha">Alpha</div>
            <button class="btn side-link"><img src="/Images/Projects-icon.svg" alt="Briefcase image">Projects</button>
            <div>
            </div>
        </div>
        <div class="top">
            <div class="search">sökfält</div>
            <div class="notice">
                <button class="notification-bell"><img src="/Images/Notification.svg" alt="notification bell"><div class="notification-ball"></div></button>
            </div>
            <div class="border-end settings">
                <button class="settings-gear"><img src="/Images/SettingsGear.svg" alt="gear settings"><div class="settings-ball"></div></button>
            </div>
            <div class="avatar">
                <img class="avatar-image" src="/Images/Avatar2.svg" alt="avatar image">
            </div>
        </div>
        <div class="main">
            <div class="main-header">
                <h2>Projects</h2>
                <button class="btn btn-blue"><i class="bi bi-plus-lg"></i>Add Project</button>
            </div>
            <div class="main-menu-horizontal">
                <button id="main-menu-all" class="btn-main-projects">ALL (8)</button>
                <button id="main-menu-started" class="btn-main-projects">STARTED (8)</button>
                <button id="main-menu-completed" class="btn-main-projects">COMPLETED (0)</button>
            </div>
            <div class="main-projects">
                @RenderBody()
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>